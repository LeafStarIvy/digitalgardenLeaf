{% block head %}
<!-- Add this at the end of your head.njk file -->
<!-- Particles CSS -->
<style>
#particles-js {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1; /* Place between background and content */
  pointer-events: none; /* Don't block clicks */
}

#particles-js canvas {
  display: block;
  opacity: 0.7; /* Adjust opacity as needed */
}

/* Ensure content appears above particles */
.content-container,
.sidebar,
.filetree-sidebar,
nav,
header,
footer,
.search-container,
.callout,
.card,
.btn,
.widget {
  position: relative;
  z-index: 2; /* Above particles */
}

a {
  position: relative;
  z-index: 2;
}
</style>
{% endblock %}
