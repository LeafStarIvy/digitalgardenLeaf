/* ----- :root - palette & tuning ----- */
:root{
  /* Palette */
  --deep:#071127;
  --darker:#071422;
  --space-blue:#0f2b66;
  --nebula-indigo:#2b2b6b;
  --nebula-purple:#4b2f8c;
  --nebula-teal:#0aa5b3;
  --accent-gold:#f6c24a;
  --accent-ice:#9bd6ff;

  /* Surfaces & text */
  --glass: rgba(14,22,36,0.55);
  --glass-2: rgba(18,28,44,0.72);
