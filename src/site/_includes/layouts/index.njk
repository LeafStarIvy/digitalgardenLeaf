        // Alt + T: Toggle theme
        if (e.altKey && e.key === 't') {
          setTheme(currentTheme === 'light' ? 'dark' : 'light');
        }
        // Alt + B: Cycle background
        if (e.altKey && e.key === 'b') {
          cycleBackground();
        }
      });
      
      // Initialize on page load
      document.addEventListener('DOMContentLoaded', function() {
        initTheme();
        
        // Add smooth transitions after initial load
